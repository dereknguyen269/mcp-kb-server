# Qdrant Vector Search (optional)
ENABLE_QDRANT=false
QDRANT_URL=http://localhost:6333

# Dashboard
# DASHBOARD_PORT=3000

# Performance
DB_TIMEOUT=5000
VACUUM_INTERVAL=86400000

# Environment
NODE_ENV=production
