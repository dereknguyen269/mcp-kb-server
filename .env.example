# MCP Knowledge Base Server Configuration

# Database
DATA_DIR=./data

# Logging
LOG_LEVEL=info

# Content Limits
MAX_MEMORY_ENTRIES=1000
MAX_KB_ENTRIES=500
MAX_CONTENT_SIZE=50000
